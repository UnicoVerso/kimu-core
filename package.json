{
  "name": "kimu-core",
  "version": "0.3.3",
  "private": false,
  "type": "module",
  "license": "MPL-2.0",
  "description": "KIMU core framework - Keep It Minimal UI Framework",
  "author": {
    "name": "Marco Di Pasquale",
    "email": "info@unicoverso.com",
    "url": "https://unicoverso.com"
  },
  "homepage": "https://unicoverso.com/kimu",
  "repository": {
    "type": "git",
    "url": "https://github.com/unicoverso/kimu-core.git"
  },
  "bugs": {
    "url": "https://github.com/unicoverso/kimu-core/issues"
  },
  "keywords": [
    "web-components",
    "ui-framework",
    "modular",
    "frontend",
    "minimal",
    "declarative",
    "kiosk",
    "unicoVerso",
    "KIMU"
  ],
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "vite": "vite",
    "preview": "vite preview",
    "build": "tsc && npm run generate-config:dev && vite build && npm run build:all-modules && npm run build:all-ext",
    "build:dev": "tsc && npm run generate-config:dev && vite build && npm run build:all-modules && npm run build:all-ext",
    "build:local": "tsc && npm run generate-config:local && vite build && npm run build:all-modules && npm run build:all-ext",
    "build:prod": "tsc && npm run generate-config:prod && vite build && npm run build:all-modules && npm run build:all-ext",
    "generate-config": "node scripts/generate-kimu-build-config.js dev",
    "generate-config:dev": "node scripts/generate-kimu-build-config.js dev",
    "generate-config:local": "node scripts/generate-kimu-build-config.js local",
    "generate-config:prod": "node scripts/generate-kimu-build-config.js prod",
    "clear:build": "node scripts/clear-kimu-build.js",
    "build:ext": "node scripts/build-extension.js",
    "build:all-ext": "node scripts/build-all-extensions.js",
    "build:all-modules": "node scripts/build-all-modules.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "idb": "^8.0.2",
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.2",
    "path": "^0.12.7",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.0"
  }
}
